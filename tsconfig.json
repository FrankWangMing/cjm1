{

  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["./src/.umi/*"]
    },
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./types/"
    ],
    "noImplicitAny": false,
    "declaration": true,
    "lib": ["esnext", "dom"],
  },
  "include": [
    "mock/**/*",
    "src/**/*",
    "config/**/*",
    "typings.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
